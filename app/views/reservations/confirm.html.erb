<h1>予約内容確認</h1>

<article>
    <hr>
    <h2>¥<%= @reservation.total_price %> / 日</h2>
    <hr>
    <p class="sub-title">開始日</p>
    <dd><%= @reservation.start_date.to_s(:datetime_jp) %></dd>
    <hr>
    <p class="sub-title">終了日</p>
    <dd><%= @reservation.end_date.to_s(:datetime_jp) %></dd>
    <hr>
    <p class="sub-title">人数</p>
    <dd><%= @reservation.persons %>人</dd>
    <hr>
    <p class="sub-title">日数</p>
    <dd><%= @reservation.many_days %>日</dd>
    <hr>
    <p class="sub-title">合計金額</p>
    <dd><%= @reservation.total_price %>円</dd>
    <hr>

    <%= form_for @reservation do |f| %>
        <%= f.hidden_field :id %> 
        <%= f.hidden_field :start_date %>
        <%= f.hidden_field :end_date %>
        <%= f.hidden_field :persons %>
        <%= f.hidden_field :many_days %>
        <%= f.hidden_field :total_price %>
        <%= f.hidden_field :user_id %>
        <%= f.hidden_field :room_id %>
        <%= f.submit '予約を確定する', class:'btn-design' %>
    <% end %>

    <div class="btn-design">
        <%= link_to 'ルーム詳細に戻る', :back %>
    </div>
</article>
