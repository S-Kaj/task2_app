<h1>予約済みルーム一覧</h1>

<article>
    <table>
        <thead>
            <tr>
                <th>ルーム画像</th>
                <th>ルーム名</th>
                <th>ルーム紹介</th>
                <th>合計金額</th>
                <th>開始日</th>
                <th>終了日</th>
                <th>予約確定日時</th>
            </tr>
        </thead>
        <tbody>
            <% @rooms.each do |room| %>
                <% @reservations.each do |res| %>  
                    <% if room.id == res.room_id %>
                        <% if current_user.id == res.user_id %>
                            <tr>
                                <td>
                                    <%= link_to room do %>
                                        <%= image_tag room.image.url, class: 'posts_img' %>
                                    <% end %>
                                </td>
                                <td><%= room.roomname %></td>
                                <td><%= room.roomintroduction %></td>
                                <td>¥<%= res.total_price %></td>
                                <td><%= res.start_date.to_s(:datetime_jp) %></td>
                                <td><%= res.end_date.to_s(:datetime_jp) %></td>
                                <td><%= res.created_at.to_s(:datetime_jp) %></td>
                        <% end %>
                    <% end %>
                <% end %>
            <% end %>
        </tbody>
    </table>
</article>
